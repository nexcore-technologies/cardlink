generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String?
  email    String    @unique
  password String
  companies Company[]
  ecards   ECard[]
}

model Company {
  id        Int     @id @default(autoincrement())
  name      String
  logoUrl   String? @db.Text
  website   String?
  contact   String?
  ownerId   Int
  owner     User    @relation(fields: [ownerId], references: [id])
  ecards    ECard[]
}

model ECard {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  fullName     String
  title        String?
  phone        String?
  email        String?
  linkedin     String?
  profileImage String?  @db.Text
  coverImage   String?  @db.Text
  companyId    Int?
  company      Company? @relation(fields: [companyId], references: [id])
  qrCodeUrl    String?  @db.Text
  ownerId      Int
  owner        User     @relation(fields: [ownerId], references: [id])
  views        Int      @default(0)
}
